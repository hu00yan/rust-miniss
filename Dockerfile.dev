FROM ubuntu:22.04

# Install system dependencies
RUN apt-get update && apt-get install -y \
    build-essential \
    pkg-config \
    curl \
    && rm -rf /var/lib/apt/lists/*

# Install Rust
RUN curl --proto '=https' --tlsv1.2 -sSf https://sh.rustup.rs | sh -s -- -y
ENV PATH="/root/.cargo/bin:${PATH}"

# Set working directory
WORKDIR /workspace

# Copy project files
COPY . .

# Pre-compile dependencies for faster iteration
RUN cargo fetch

# Verify that key dependencies (signal-hook, criterion) are available
# This ensures they're properly cached for development
RUN cargo tree | grep -E "(signal-hook|criterion)" || echo "Dependencies check complete"

# Pre-build with timer feature to cache compilation
RUN cargo check --features=timer || echo "Feature check complete"

# Default command
CMD ["cargo", "check"]
